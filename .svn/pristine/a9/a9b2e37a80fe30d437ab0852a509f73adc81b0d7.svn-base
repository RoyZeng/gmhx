							<input id="shjs" style="width:85%"  placeholder="结束审核时间"  name="mod_checkDate_end" type="text" readonly="readonly" onFocus="WdatePicker({minDate:'#F{$dp.$D(\'shks\')||\'%y-%M-%d\'}'})"/>
