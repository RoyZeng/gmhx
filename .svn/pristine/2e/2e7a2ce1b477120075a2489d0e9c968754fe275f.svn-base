<script type="text/javascript">
    var dataGrid;
    $(function(){
    	onStart(document.body.clientHeight - 276);
    	$('#dataGrid').datagrid('cancelCellTip');
    	$('#dataGrid').datagrid('doCellTip',{'max-width':'300px'});
